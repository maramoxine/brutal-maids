function be_on_top(){
///@func be_on_top([instance])
///@arg [instance]
///@arg check_var

var instance = argument[0]
var check_var = false

switch(argument_count){
	case 2:	check_var = argument[1]}

// Check stuff
if instance.bbox_bottom != bbox_top -1
	return false

if check_var
	if !instance.grounded
		return false

return true;

}